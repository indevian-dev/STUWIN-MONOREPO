{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/types": [
        "../../packages/shared/src/index"
      ],
      "@/types/auth/*": [
        "../../packages/shared/src/modules/auth/types/*"
      ],
      "@/types/resources": [
        "../../packages/shared/src/modules/auth/types/resources"
      ],
      "@/types/resources/*": [
        "../../packages/shared/src/modules/auth/types/resources/*"
      ],
      "@/types/*": [
        "../../packages/shared/src/*"
      ],
      "@/lib/app-core-modules/types": [
        "../../packages/shared/src/modules/common/index"
      ],
      "@/lib/app-core-modules/auth/types": [
        "../../packages/shared/src/modules/auth/types/index"
      ],
      "@/lib/app-infrastructure/types": [
        "../../packages/shared/src/api/index"
      ],
      "@/lib/ui/types": [
        "../../packages/shared/src/ui/index"
      ],
      "@/lib/utils/types": [
        "../../packages/shared/src/validation/index"
      ],
      "@/lib/utilities/*": [
        "./lib/utils/*"
      ],
      "@/lib/helpers/*": [
        "./lib/utils/*"
      ],
      "@/lib/helpers/types": [
        "../../packages/shared/src/validation/index"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}
